<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:background="@color/invisible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_sheet_delete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="12dp"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginVertical="4dp"
            android:layout_marginEnd="8dp">
        <TextView
            android:id="@+id/bottom_sheet_delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:text="@string/delete"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_sheet_storno"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="12dp"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginVertical="4dp"
            android:layout_marginEnd="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:layout_marginStart="16dp"
            android:textSize="15sp"
            android:text="@string/storno"/>

        </androidx.cardview.widget.CardView>
</LinearLayout>