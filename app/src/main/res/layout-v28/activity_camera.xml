<!--            app:fabSize="normal"-->
<!--            app:maxImageSize="80dp"-->
<!--            android:background="@null"-->
<!--            android:backgroundTint="@null"-->
<!--            app:backgroundTint="@null"-->
<!--             />-->

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/videoOnlineImageButton"
            android:background="@drawable/btn_video_online_foreground"
            />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flip_facing_camera"
        android:contentDescription="@string/flip_facing_camera"
        android:src="@drawable/ic_flip_camera_white_24dp"
            app:iconSize="45dp"
            app:fabSize="auto"
            android:alpha="0.5"
            android:layout_margin="8dp"
            app:fabCustomSize="45dp"
            app:backgroundTint="@color/material_gray_300"
            android:layout_gravity="center_vertical"
            app:maxImageSize="45dp"
            android:outlineSpotShadowColor="@color/colorGrey"
            app:rippleColor="@color/white"
            android:clickable="true"
            app:elevation="8dp"
            app:backgroundTintMode="src_over"
            android:focusable="true"/>

    </GridLayout>

</RelativeLayout>